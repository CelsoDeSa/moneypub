<div id='about'>
	<div class="media">
      	<div class="media-body">
			<h4 class="text-warning">
				<i class='glyphicon glyphicon-star'></i>
				Confidence Index Breakdown			
			</h4>			
			<div class="info">
				<h5 class="text-warning">
					<%= @site.name %>
				</h5>

				<h5 class="text-muted">
					<i class="octicon octicon-globe"></i>
					Access rank: <%= @site.score.alexa %>
				</h5>
				
				<h5 class="text-muted">
					<i class="octicon octicon-link"></i>
					Google rank: <%= @site.score.google %>
				</h5>

				<h5 class="text-muted">
					<i class="octicon octicon-pulse"></i>
					SEO rank: <%= @site.score.moz %>
				</h5>

				<h5 class="text-muted">
					<i class="octicon octicon-file-text"></i>
					Articles: +<%= @site.articles.length %>
				</h5>

				<h5 class="text-muted">
					<i class="octicon octicon-repo"></i>
					Books: ~<%= @site.score.books %>
				</h5>

				<h5 class="text-muted">
					<i class="octicon octicon-beer"></i>	
					<%= "Total: #{@site.confidence}%" %>
				</h5>
			</div>
		</div>
</div>